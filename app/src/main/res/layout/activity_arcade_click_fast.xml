<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dirinc.number_game.ArcadeClickFast">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_click_fast"
        android:textColor="@color/button_text_color"
        android:id="@+id/button_click_fast"
        android:background="@drawable/button"
        android:clickable="true"
        android:paddingStart="@dimen/button_text_padding_left"
        android:paddingEnd="@dimen/button_text_padding_right"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/time_remaining"
        android:id="@+id/time_remaining"
        android:layout_above="@+id/button_click_fast"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/clicks"
        android:id="@+id/clicks"
        android:layout_above="@+id/button_click_fast"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        />

</RelativeLayout>
