<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dirinc.randomnumbergenerator.NumberActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_again"
        android:textColor="@color/button_text_color"
        android:id="@+id/doItAgain"
        android:background="@drawable/button"
        android:clickable="true"
        android:paddingStart="@dimen/button_text_padding_left"
        android:paddingEnd="@dimen/button_text_padding_right"
        android:layout_below="@+id/randomNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="@dimen/leaderboard_icon_size"
        android:layout_height="@dimen/leaderboard_icon_size"
        android:id="@+id/leaderboards"
        android:background="@drawable/leaderboards"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="@dimen/back_icon_size"
        android:layout_height="@dimen/back_icon_size"
        android:id="@+id/back"
        android:background="@drawable/back"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView style="@style/RandomNumber"
        android:id="@+id/randomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/recordNumber"
        android:layout_centerHorizontal="true" />

    <TextView style="@style/RecordNumber"
        android:id="@+id/recordNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp" />

    <TextView style="@style/Odds"
        android:id="@+id/percentOdds"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doItAgain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <TextView style="@style/Odds"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factoid"
        android:layout_below="@+id/percentOdds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView style="@style/Odds"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factoidGuts"
        android:layout_below="@+id/factoid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>
