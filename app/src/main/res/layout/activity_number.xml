<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dirinc.randomnumbergenerator.NumberActivity">

    <TextView style="@style/RandomNumber"
        android:id="@+id/rng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView style="@style/RecordLow"
        android:id="@+id/recordLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_again"
        android:textColor="@color/button_text_color"
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/button_text_padding_left"
        android:paddingEnd="@dimen/button_text_padding_right"
        android:onClick="generateNumber"
        />

</RelativeLayout>
