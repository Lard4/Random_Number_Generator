<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/primary_background_dark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
    </style>

    <style name="DialogTitle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dialogTitle</item>
    </style>

    <style name="Transparent_Background" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/transparent_background</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:panelBackground">@color/transparent</item>
    </style>

    <style name="RandomNumber" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/random_number</item>
    </style>

    <style name="About" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/about_text</item>
    </style>

    <style name="AboutVersion" parent="@style/About">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/about_text_version</item>
    </style>

    <style name="RecordNumber" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/record_low</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Odds" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/odds</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NewColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/new_color_unlock</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Purple">
        <item name="android:background">@color/purple_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/purple_navigation_bar_color</item>
    </style>

    <style name="Blue">
        <item name="android:background">@color/blue_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/blue_navigation_bar_color</item>
    </style>

    <style name="Teal">
        <item name="android:background">@color/teal_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/teal_navigation_bar_color</item>
    </style>

    <style name="Yellow">
        <item name="android:background">@color/yellow_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/yellow_navigation_bar_color</item>
    </style>

    <style name="Orange">
        <item name="android:background">@color/orange_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/orange_navigation_bar_color</item>
    </style>

    <style name="Red">
        <item name="android:background">@color/red_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/red_navigation_bar_color</item>
    </style>

    <style name="Pink">
        <item name="android:background">@color/pink_primary_background</item>
        <item name="android:statusBarColor">@color/button_background</item>
        <item name="android:navigationBarColor">@color/pink_navigation_bar_color</item>
    </style>
</resources>
